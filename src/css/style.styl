@import "yeticss"

body {
  fieldset {
    border-color: white;
    padding: 10px 20px;
  }

  legend {
    color: white;
    text-align: left;
    font-weight: 500;
    font-size: 16px;
  }

  .form-input {
    background: transparent;
    box-shadow: 0 none;
    border: 0 none;
    border-bottom: 2px solid transparent;
    color: white;
    border-radius: 0;
    font-size: 42px;

    &:focus,
    &:active {
      box-shadow: none;
      border: 0 none;
      border-bottom: 2px solid white;
    }
  }
}


h1, h2, h3, h4, h5, h6 {
  color: white;
}

.weather-container {
  transition: background .4s ease-in-out;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  margin: 0;
  padding: 0;

  .weather-body {
    text-align: center;
    width: 330px;
    margin: 0 auto;
    padding: 50px 0;

    .temperature {
      margin-top: 10px;
    }

    h1 {
      margin-bottom: 0;
      font-weight: 900;
      font-size: 72px;

      &:after {
        content: '\2103';
        font-weight: 100;
        display: inline-block;
      }
    }
    h5 {
      font-size: 14px;
      font-weight: 100;
      letter-spacing: 0.05em;
      margin-bottom: 5px;
    }
    h3 {
      font-size: 20px;
    }
  }

  .blockquote {
    background: white;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    margin: 0;
  }
}
